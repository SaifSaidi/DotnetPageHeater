@page "/counter"
@using DotnetPageHeater.Extensions
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
  
<button @ref="counterButton" class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div style="height:100px"></div>
<button @ref="counterButton2" class="btn btn-primary" @onclick="IncrementCount2">Click me</button>


@code {
    private ElementReference counterButton;
    private ElementReference counterButton2;
    private int currentCount = 0;

    private async Task IncrementCount()
    {
        currentCount++;
        await counterButton.TriggerHeatMapEvent(JSRuntime);
    }
    private async Task IncrementCount2()
    {
        currentCount++;
        await counterButton2.TriggerHeatMapEvent(JSRuntime);
    }
}
